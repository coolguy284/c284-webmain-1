{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [
    "eslint-plugin-html",
    "vue"
  ],
  "settings": {
    "html/html-extensions": [ ".html", ".dev" ]
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": 0,
    "no-cond-assign": 0
  },
  "overrides": [
    {
      "files": [ "srv_web_main/websites/public/**/*.*" ],
      "rules": {
        "no-unused-vars": 1,
        "no-cond-assign": 1,
        "no-undef": 0
      }
    }
  ]
}
